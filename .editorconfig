root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
indent_size = 2
indent_style = tab
max_line_length = 100

[*.{ts,tsx,js,jsx}]
max_line_length = 180

[*.md]
trim_trailing_whitespace = false
indent_size = unset
indent_style = unset
max_line_length = unset

[*.yml]
indent_style = space
indent_size = 2

[{package.json,package-lock.json}]
indent_style = space
indent_size = 2
